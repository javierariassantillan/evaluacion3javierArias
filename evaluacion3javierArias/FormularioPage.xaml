<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 

             xmlns:vm="clr-namespace:evaluacion3javierArias.ViewModels" 

             x:Class="evaluacion3javierArias.Views.FormularioPage">

    <ContentPage.BindingContext>

        <vm:PrendaViewModel />

    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">

        <Label Text="Javier Arias - 08/05/1998" FontAttributes="Bold" FontSize="20" />



        <Entry Placeholder="Prenda" Text="{Binding PrendaNombre}" />

        <Entry Placeholder="Color" Text="{Binding Color}" />

        <Entry Placeholder="Talla" Keyboard="Numeric" Text="{Binding Talla}" />

        <CheckBox IsChecked="{Binding EnInventario}" />

        <Label Text="¿Está en inventario?" />



        <Button Text="Guardar" Command="{Binding GuardarPrendaCommand}" />

    </VerticalStackLayout>

</ContentPage> 