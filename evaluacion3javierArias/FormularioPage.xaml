<ContentPage 
    x:Class="evaluacion3javierArias.FormularioPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Formulario">

    <StackLayout Padding="20">
        <Label Text="Nombre de la prenda:" />
        <Entry Text="{Binding PrendaNombre}" />

        <Label Text="Color:" />
        <Entry Text="{Binding Color}" />

        <Button Text="Guardar" Command="{Binding GuardarCommand}" />
    </StackLayout>
</ContentPage>
