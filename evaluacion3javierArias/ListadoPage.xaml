<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 

             xmlns:vm="clr-namespace:evaluacion3javierArias.ViewModels" 

             x:Class="evaluacion3javierArias.Views.ListadoPage">

    <ContentPage.BindingContext>

        <vm:PrendaViewModel />

    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Prendas}">

        <CollectionView.ItemTemplate>

            <DataTemplate>

                <VerticalStackLayout>

                    <Label Text="{Binding PrendaNombre}" FontAttributes="Bold" />

                    <Label Text="{Binding Color}" />

                    <Label Text="Talla: {Binding Talla}" />

                </VerticalStackLayout>

            </DataTemplate>

        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage> 