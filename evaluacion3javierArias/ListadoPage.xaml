<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="evaluacion3javierArias.ListadoPage"
             Title="Listado de Prendas">

    <StackLayout Padding="20">
        <Label Text="Listado de Prendas" FontSize="24" HorizontalOptions="Center"/>
        <CollectionView x:Name="ListadoPrendas">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding PrendaNombre}" FontAttributes="Bold"/>
                        <Label Text="{Binding Color}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
